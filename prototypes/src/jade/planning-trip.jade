.container
    .row(ng-controller="planningController")

        h2 Zaplanuj podróż
            form
                .form-group
                    label.control-label(for='dp1') Wybierz dzień
                        .controls
                            .input-group
                                input.date-picker.form-control(
                                id='dp1'
                                type='date'
                                ng-model='formday'
                                )


                .form-group
                    label Przystanek:
                    select.form-control(
                    name='busstop'
                    ng-model='formstops'
                    )
                        option(ng-repeat="stop in planning") {{ stop.name }}

                .form-group
                    label Linia nr:
                    select.form-control(
                    name='buslines'
                    ng-model='formlines'
                    )
                        option(ng-repeat="line in planning") {{ line.name }}

                    button(ng-click="addLine()") Dodaj Plan

                    .row

                    .col-md-4 {{day | date:'shortDate' }}
                    .col-md-4 {{lines}}







